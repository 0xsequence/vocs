{
  "name": "scood",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun server.ts",
    "build": "bun run build:client && bun run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/index.server.tsx --outDir dist/server",
    "format": "biome format . --write",
    "lint": "biome lint . --apply-unsafe",
    "serve": "NODE_ENV=production bun server.ts",
    "debug": "node --inspect-brk server"
  },
  "dependencies": {
    "@tinyhttp/app": "^2.2.0",
    "@vitejs/plugin-react": "4.1.0",
    "autoprefixer": "^10.4.16",
    "compression": "^1.7.4",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.16.0",
    "serve-static": "^1.15.0",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.2.2",
    "@types/compression": "^1.7.3",
    "@types/node": "^20.8.5",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@types/react-helmet": "^6.1.7",
    "@types/serve-static": "^1.15.3",
    "bun-types": "^1.0.6"
  }
}