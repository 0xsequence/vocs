{
  "workspaces": ["playgrounds/*", "src"],
  "private": true,
  "type": "module",
  "scripts": {
    "build": "rimraf src/_lib src/tsconfig.build.* && tsc -p tsconfig.build.json && bun scripts/postbuild.ts",
    "dev": "cd playgrounds/default && bun run dev",
    "format": "biome format . --write",
    "lint": "biome lint . --apply-unsafe",
    "prepare": "bun x simple-git-hooks",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.3.1",
    "@types/compression": "^1.7.3",
    "@types/fs-extra": "^11.0.2",
    "@types/node": "^20.8.5",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@types/react-helmet": "^6.1.7",
    "@types/serve-static": "^1.15.3",
    "bun-types": "^1.0.6",
    "fs-extra": "^11.1.1",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run format && bun run lint"
  }
}
